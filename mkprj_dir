#if [ "$1" = "" ];then
#	echo "Project name was not specified.";
#	exit 1;
#elif [ -d $1 ];then
#	echo "\"${1}\" directory already exits. ";
#	exit 1;
#else
#	mkdir -p "$project_name/src/main/java/${path_by_domain}"
#	mkdir -p "$project_name/src/test/java/${path_by_domain}"
#  	mkdir -p "$project_name/src/main/resources"
#fi


